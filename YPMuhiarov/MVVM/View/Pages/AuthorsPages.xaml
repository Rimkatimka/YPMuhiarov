<Page x:Class="YPMuhiarov.MVVM.View.Pages.AuthorsPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YPMuhiarov.MVVM.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorsPages">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ListView HorizontalContentAlignment="Stretch" ItemsSource="{Binding ListBooks}" SelectedItem="{Binding SelectedBook}" Margin="5" Background="#8C9EAD" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" BorderThickness="3" BorderBrush="Black">
                        <StackPanel Margin="5">
                            <TextBlock Style="{StaticResource NormTBlock}" Text="{Binding FIO}"/>
                            <TextBlock Style="{StaticResource NormTBlock}" Text="{Binding BirthDate}"/>
                            <TextBlock Style="{StaticResource NormTBlock}" Text="{Binding DeathDate}"/>
                            <TextBlock Style="{StaticResource NormTBlock}" Text="{Binding Country}"/>
                            <TextBlock Style="{StaticResource NormTBlock}" Text="{Binding Biography}"/>
                            <TextBlock Style="{StaticResource NormTBlock}" Text="{Binding MainGenres}"/>
                        </StackPanel>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <StackPanel Grid.Column="1" DataContext="{Binding SelectedAuthor}">
            <TextBlock Style="{StaticResource NormTBlock}" Text="Выбранный элемент" Margin="10"/>
            <StackPanel Margin="5">
                <TextBlock Style="{StaticResource NormTBlock}" Text="Название"/>
                <TextBox Text="{Binding Title,UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Style="{StaticResource NormTBlock}" Text="Автор(ы)"/>
                <ListView HorizontalContentAlignment="Stretch" ItemsSource="{Binding Authors}" Background="#8C9EAD" Margin="5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Style="{StaticResource NormTBlock}" Text="{Binding FIO}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock Style="{StaticResource NormTBlock}" Text="Жанр"/>
                <TextBox Text="{Binding FIO,UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Style="{StaticResource NormTBlock}" Text="Год Выпуска"/>
                <TextBox Text="{Binding BirthDate,UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Style="{StaticResource NormTBlock}" Text="Статус"/>
                <TextBox Text="{Binding DeathDate,UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Style="{StaticResource NormTBlock}" Text="Оценка износа"/>
                <TextBox Text="{Binding Country,UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Style="{StaticResource NormTBlock}" Text="Требуется замена"/>
                <TextBox Text="{Binding Biography,UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Style="{StaticResource NormTBlock}" Text="Требуется замена"/>
                <TextBox Text="{Binding MainGenres,UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </StackPanel>
        <Button Command="{Binding AddAuthor}" Grid.Row="1" Content="Добавить"/>
    </Grid>
</Page>
